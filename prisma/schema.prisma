generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  category  String
  quantity  Int
  price     Float
  updated   DateTime @updatedAt
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String   @unique
  description String?
  updated     DateTime @updatedAt
}